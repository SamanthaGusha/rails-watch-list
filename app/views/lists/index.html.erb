<!--Masthead-->
<header class="masthead">
  <div class="container">
    <div class="card d-flex align-items-center justify-content-center mt-10 mb-10">
      <h1 class="masthead-subheading">Movie Watchlist</h1>
      <div class="btn btn-info btn-xl text-uppercase" href="#watchlist">
        <%= link_to 'Create new Watchlist', new_list_path(@list) %>
      </div>
    </div>
  </div>
</header>
<!--Lists-->
<div class="row m-5">
  <div class="d-flex align-items-center">
    <div class="d-flex justify-content-between">
        <ul>
          <% @lists.each do |list| %>
          <div class="card">
          <%= link_to list.name, list_path(list) %>
          </div>
          <% end %>
        </ul>
    </div>
  </div>
</div>
